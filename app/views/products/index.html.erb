<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table width="100%">
  <thead>
    <tr>
      <th><h3>Name</h3></th>
      <th><h3>Description</h3></th>
      <th><h3>Image url</h3></th>
     <!--  <th><h4>Price</h4></th> -->

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="productlist">
    <% @products.each do |product| %>
      <tr>
        <td class="p_name"><%= product.name %></td>
        <td class="p_description"><%= product.description %></td>
        <td class="p_image_url"><%= product.image_url %></td>
        <td><%= link_to 'Show /', product %>
       <%= link_to 'Edit /', edit_product_path(product) %>
       <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>





